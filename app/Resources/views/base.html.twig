<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <title>{% block title %}SiCoPE{% endblock %}</title>
        <link href="{{ asset('css/jquery.mobile-1.4.5.min.css') }}" rel="stylesheet">
        <link href="{{ asset('css/jquery.mobile.datepicker.css') }}" rel="stylesheet">
        {% block stylesheets %}{% endblock %}
        
        <script src="{{ asset('js/jquery.min.js') }}"></script>
        <script src="{{ asset('js/jquery.mobile-1.4.5.min.js') }}"></script>
        <script src="{{ asset('js/jquery_ui_datepicker.js') }}"></script>
        <script src="{{ asset('js/jquery.mobile.datepicker.js') }}"></script>
        {% block javascripts %}{% endblock %}
        
        <link rel="icon" type="image/x-icon" href="{{ asset('img/proyectoGTDL.png') }}" />
    </head>
    <body>
        <div data-role="page" id="principal">
            <div data-role="header" data-theme="b" data-position="fixed">
                <h1>{% block cabecera %}TITULO{% endblock %}</h1>
                <a href="#nav-panel" data-icon="bars" data-iconpos="notext">Menu</a>
                <a href="#add-form" data-icon="gear" data-iconpos="notext">Add</a>
            </div>
        
            <div role="main" class="ui-content jqm-content jqm-fullwidth">
                {% block cuerpo %}CONTENIDO{% endblock %}
                 <div data-demo-html="#panel-responsive-page1"></div>
            </div>
            
            <div data-role="footer">
                <h4>ASEISI  2015</h4>
            </div>
            
            <div data-role="panel" data-position-fixed="true" data-display="push" data-theme="b" id="nav-panel">
                <ul data-role="listview">
                    <li data-icon="delete"><a href="#" data-rel="close">Cerrar Men√∫</a></li>
                        <li data-icon="home"><a href="{{ path('prestamo') }}" data-theme="b">Principal</a></li>
                        <li data-icon="carat-r"><a href="{{ path('equipo') }}" data-theme="a">Equipo</a></li>
                        <li data-icon="carat-r"><a href="{{ path('usuario') }}" data-theme="a">Usuarios</a></li>       
                </ul>
            </div>
            <div data-role="panel" data-position="right" data-display="reveal" data-theme="a" id="add-form">
                <form class="userform">
                    <h2>Login</h2>
                    <label for="name">Username:</label>
                    <input type="text" name="name" id="name" value="" data-clear-btn="true" data-mini="true">
        
                    <label for="password">Password:</label>
                    <input type="password" name="password" id="password" value="" data-clear-btn="true" autocomplete="off" data-mini="true">
        
                    <div class="ui-grid-a">
                        <div class="ui-block-a"><a href="#" data-rel="close" class="ui-btn ui-shadow ui-corner-all ui-btn-b ui-mini">Cancel</a></div>
                        <div class="ui-block-b"><a href="#" data-rel="close" class="ui-btn ui-shadow ui-corner-all ui-btn-a ui-mini">Save</a></div>
                    </div>
                </form>
            </div>
        </div>
        
        {% block body %}{% endblock %}
        
        
    </body>
</html>
